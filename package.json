{
	"name": "snowyfieldsclient",
	"version": "1.0.0",
	"description": "Snowy Fields Downloadable Client",
	"productName": "Snowy Fields",
	"main": "main.js",
	"scripts": {
		"start": "electron ."
	},
	"repository": "https://github.com/random-sb/snowyfields-client",
	"keywords": [
		"club penguin",
		"anvura",
		"snowy fields"
	],
	"build": {
		"publish": [
			{
				"provider": "github",
				"owner": "random-sb",
				"repo": "snowyfields-client"
			}
		],
		"appId": "com.snowyfields.desktop",
		"mac": {
			"asar": false,
			"target": "dmg",
			"category": "public.app-category.games",
			"files": [
				"**/*",
				"!**/flash/{windows, linux}",
				"!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
				"!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
				"!**/node_modules/*.d.ts",
				"!**/node_modules/.bin",
				"!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
				"!.editorconfig",
				"!**/._*",
				"!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes,.github}",
				"!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
				"!**/{appveyor.yml,.travis.yml,circle.yml}",
				"!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
			]
		},
		"dmg": {
			"background": "background/macos_bg.png",
			"window": {
				"width": "540",
				"height": "380"
			  }
		},
		"linux": {
			"asar": false,
			"target": [
				{
					"target": "deb",
					"arch": [
						"x64",
						"ia32"
					]
				},
				{
					"target": "AppImage",
					"arch": [
						"x64",
						"ia32"
					]
				},
				{
					"target": "snap",
					"arch": [
						"x64"
					]
				}
			],
			"files": [
				"**/*",
				"!**/flash/{windows, mac}",
				"!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
				"!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
				"!**/node_modules/*.d.ts",
				"!**/node_modules/.bin",
				"!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
				"!.editorconfig",
				"!**/._*",
				"!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes,.github,background}",
				"!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
				"!**/{appveyor.yml,.travis.yml,circle.yml}",
				"!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
			]
		},
		"win": {
			"asar": false,
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64",
						"ia32"
					]
				}
			],
			"files": [
				"**/*",
				"!**/flash/{linux,mac}",
				"!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
				"!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
				"!**/node_modules/*.d.ts",
				"!**/node_modules/.bin",
				"!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
				"!.editorconfig",
				"!**/._*",
				"!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes,.github,background,icons}",
				"!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
				"!**/{appveyor.yml,.travis.yml,circle.yml}",
				"!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
			]
		}
	},
	"author": "Snowy Fields <snowyfieldscp@gmail.com> (www.snowyfields.ca)",
	"license": "CC0-1.0",
	"devDependencies": {
		"electron-builder": "^22.10.5",
		"electron": "^8.5.5"
	},
	"dependencies": {
		"discord-rpc": "^3.2.0",
		"electron-updater": "^4.3.2",
		"ini": ">=1.3.6"
	}
}
